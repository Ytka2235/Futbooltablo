<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/flagR"
        android:layout_width="120dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/_flagr"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ClickButUSA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/flagR"
        app:layout_constraintStart_toStartOf="@+id/flagR"
        app:layout_constraintTop_toBottomOf="@+id/flagR"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/butR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/butR"
        android:onClick="ClickButR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/flagR"
        app:layout_constraintStart_toStartOf="@+id/flagR"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintTop_toBottomOf="@+id/flagR" />

    <Button
        android:id="@+id/butSbros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/butSbros"
        android:onClick="ClickButSbros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/flagUSA"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:src="@drawable/_flagusa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textUSA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/flagUSA"
        app:layout_constraintStart_toStartOf="@+id/flagUSA"
        app:layout_constraintTop_toBottomOf="@+id/flagUSA"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/butUSA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/butUSA"
        android:onClick="ClickButUSA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/flagUSA"
        app:layout_constraintStart_toStartOf="@+id/flagUSA"
        app:layout_constraintTop_toBottomOf="@+id/flagUSA"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/c0unt"
        app:layout_constraintBottom_toBottomOf="@+id/textUSA"
        app:layout_constraintEnd_toStartOf="@+id/textUSA"
        app:layout_constraintStart_toEndOf="@+id/textR"
        app:layout_constraintTop_toTopOf="@+id/textR" />
</androidx.constraintlayout.widget.ConstraintLayout>

